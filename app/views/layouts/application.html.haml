!!!
%html
  %head
    %title Taskmonitor
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body

    - if current_user
      = "Signed in as #{current_user.email}"
      = link_to "Sign out", logout_path
    - else
      = link_to "Sign in", new_user_session_path

    =yield

    %p .notice
      = notice
    %p .alert
      = alert