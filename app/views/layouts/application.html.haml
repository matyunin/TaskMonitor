!!!
%html
  %head
    %title Taskmonitor
    = javascript_include_tag "jquery"
    = javascript_include_tag "jquery.mousewheel"

    = stylesheet_link_tag    "bootstrap.min"
    = javascript_include_tag "bootstrap.min"

    = stylesheet_link_tag    "jquery.fancybox"
    = javascript_include_tag "jquery.fancybox"

    = stylesheet_link_tag    "jquery-ui-1.10.3.custom.min"
    = javascript_include_tag "jquery-ui-1.10.3.custom.min"

    = javascript_include_tag "json2"
    = javascript_include_tag "underscore-min"
    = javascript_include_tag "backbone-min"

    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"

    = javascript_include_tag @controller

    = csrf_meta_tags
  %body
    .container
      .row
        .span12
          %br
          .navbar
            .navbar-inner
              %a.brand{:href => projects_path} TaskMonitor
              %ul.nav
                %li
                  %a{:href => '#'} О проекте
              </ul>
              = render :partial => "layouts/profile_controls"
      .row
        - if user_signed_in?
          .span3
            = render :partial => "projects/menu_left", :object => @projects
        .span9

          =yield

          %p.notice
            = notice
          %p.alert
            = alert