%form.task-new
  %fieldset
    %legend Создать задачу

    %label Название
    %input{:name => 'task[name]', :type => 'text', :placeholder => 'название задачи'}

    %label Дата начала
    %input.datapick{:name => 'task[start]', :type => 'text'}

    %label Дата завершения
    %input.datapick{:name => 'task[finish]', :type => 'text'}

    %label Приоритет
    %input{:name => 'task[priority]', :type => 'text', :placeholder => '1-100'}

    %label Описание
    %textarea{:name => 'task[description]', :placeholder => 'Краткое описание задачи'}

    %br
    %br

    %button.btn{:type => 'submit'} Создать